{
    "name": "vdhicts/menu-builder",
    "description": "Easily create hierarchical menu's from a single database table and query",
    "license": "MIT",
    "authors": [
        {
            "name": "Dick van der Heiden",
            "email": "info@vdhicts.nl",
            "role": "Developer",
            "homepage": "https://www.vdhicts.nl"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "vdhicts/html-element": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Vdhicts\\Menu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vdhicts\\Menu\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
